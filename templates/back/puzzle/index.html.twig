{% extends 'baseAdmin.html.twig' %}


{% block body %}
    <h1> Les puzzles</h1>

    {% include 'back/flashMessage.html.twig' %}

    <div class="card">
        <div class="card-header">
            <p><a class="btn btn-primary" href="{{ path('admin.puzzle.new') }}">Ajouter</a></p>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>id</th>
                    <th>Theme</th>
                    <th>Rating</th>
                    <th class="action-menu">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for puzzle in puzzles %}
                    <tr>
                        <td>{{ puzzle.id }}</td>
                        <td>{{ puzzle.theme.name }}</td>
                        <td>{{ puzzle.rating }}</td>
                        <td class="action">
                            <a href="{{ path('admin.puzzle.edit', {id:puzzle.id}) }}">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                            <a href="{{ path('admin.puzzle.delete', {id:puzzle.id}) }}">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}