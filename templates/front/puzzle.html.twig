{% extends 'base.html.twig' %}

{% block body %}


<div class="flex justify-center mt-20">
    <div class="widget widget-puzzle">
        <div class="t-align-end mb-20">
            <a href="{{ path('index') }}" class="btn-small btn-tertiary">Terminer la session</a>
        </div>
        <div id="myBoard"></div>
        <div class="widget-puzzle-info mt-40">
            {# <h1>Woodpecker</h1> #}
            <div class="flex justify-between">
                <h2 id="gameStatus"></h2>
                <h2>Puzzle n°<span id="puzzleIndex">1</span></h2>
            </div>
            <div class="flex justify-between">
                <div class="flex items-center"><h3 class="mr-10">Temps écoulé : </h3> <span id="timer"> 00:00</span></div>
                <div class="flex items-center"><h3 class="mr-10">Erreur(s) :</h3> <span id="errorCount"> 0</span></div>
            </div>
            <div id="feedbackZone" class="flex justify-end mt-40"></div>
        </div>
    </div>
</div>






