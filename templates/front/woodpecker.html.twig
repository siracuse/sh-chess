{% extends 'base.html.twig' %}


{% block body %}


<div class="mt-40">
    <h1 class="t-align-center mb-40">Choisir un thème</h1>


    <div class="t-align-center flex flex-col items-center gap-20">
    {% for theme in themes %}
        
        <a href="{{path('woodpecker.theme', {id:theme.id})}}" 
        class="btn-theme flex items-center widget gap-20"> 
            <img class="theme-icon" src="{{ asset('images/themes/' ~ theme.name ~ '.svg') }}">
            <div class="flex flex-col items-start ">
                <h3>{{ theme.name|capitalize }}</h3>
                <p>20 problèmes</p>
            </div>
            <p class="font-weight">< 1000 </p> 
        </a>

    {% endfor %}
    </div>
</div>



{% endblock %}


               